{
  "meta": {
    "instanceId": "kenny-whatsapp-search-messages"
  },
  "nodes": [
    {
      "parameters": {
        "method": "POST",
        "url": "http://localhost:3004/list-messages",
        "sendHeaders": true,
        "headerParameters": {
          "Content-Type": "application/json"
        },
        "sendBody": true,
        "bodyParameters": {
          "query": "={{ $json.query }}",
          "limit": "={{ $json.limit || 20 }}",
          "page": "={{ $json.page || 0 }}",
          "after": "={{ $json.after }}",
          "before": "={{ $json.before }}",
          "sender_phone_number": "={{ $json.sender_phone_number }}",
          "chat_jid": "={{ $json.chat_jid }}",
          "include_context": "={{ $json.include_context || true }}",
          "context_before": "={{ $json.context_before || 1 }}",
          "context_after": "={{ $json.context_after || 1 }}"
        }
      },
      "id": "whatsapp-search-messages",
      "name": "Search WhatsApp Messages",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [400, 300]
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "leftValue": "={{ $json.success }}",
              "rightValue": true,
              "operator": {
                "type": "boolean",
                "operation": "equal"
              }
            }
          ],
          "combinator": "and"
        }
      },
      "id": "success-check",
      "name": "Success Check",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [600, 300]
    },
    {
      "parameters": {
        "jsCode": "const result = $input.all()[0].json;\nif (result.success && result.data) {\n  const messages = result.data.messages || [];\n  return messages.map(msg => ({\n    json: {\n      id: msg.id,\n      chat_jid: msg.chat_jid,\n      chat_name: msg.chat_name || 'Unknown Chat',\n      sender: msg.sender || 'Unknown Sender',\n      sender_name: msg.sender_name || '',\n      content: msg.content || '',\n      timestamp: msg.timestamp || '',\n      message_type: msg.message_type || 'text',\n      has_media: msg.has_media || false,\n      media_type: msg.media_type || null,\n      is_from_me: msg.is_from_me || false,\n      context: msg.context || []\n    }\n  }));\n} else {\n  return [{ json: { \n    success: false, \n    error: result.error || 'No messages found'\n  }}];\n}"
      },
      "id": "format-messages",
      "name": "Format Messages",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [800, 200]
    },
    {
      "parameters": {
        "jsCode": "const error = $input.all()[0].json.error || 'Failed to search messages';\nreturn [{ json: { error: error, success: false } }];"
      },
      "id": "handle-error",
      "name": "Handle Error",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [800, 400]
    },
    {
      "parameters": {
        "options": {}
      },
      "id": "webhook-trigger",
      "name": "WhatsApp Message Search",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 2,
      "position": [200, 300],
      "webhookId": "whatsapp-search-messages"
    }
  ],
  "connections": {
    "webhook-trigger": {
      "main": [
        [
          {
            "node": "Search WhatsApp Messages",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Search WhatsApp Messages": {
      "main": [
        [
          {
            "node": "Success Check",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Success Check": {
      "main": [
        [
          {
            "node": "Format Messages",
            "type": "main",
            "index": 0
          }
        ],
        [
          {
            "node": "Handle Error",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  }
}